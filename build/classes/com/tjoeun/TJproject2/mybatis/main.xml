<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjoeun.project2.vo.MainVO">

	<!-- 메인 글 1건을 불러옴(미사용) -->
	<select id="selectByIdx" parameterType="int" resultType="vo">
		select * from main where idx = #{idx}
	</select>
	
	<!-- 랭킹 글 5건을 불러옴 -->
	<select id="selectRankList" resultType="vo">
		<![CDATA[
			select * from ( 
				select rownum rnum, AA.* from (
					select * from main order by hit desc
				) AA where rownum <= 5
			) where rnum >= 1
		]]>
	</select>
	
</mapper>
